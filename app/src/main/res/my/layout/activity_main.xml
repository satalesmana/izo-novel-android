<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingTop="30pt"
    android:background="#333"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_dark_background">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15pt"
            android:text="Main Menu"
            android:textSize="75px"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="90px"
        android:paddingLeft="90px"
        android:layout_marginTop="25px"
        >
        <LinearLayout
            android:layout_width="200px"
            android:layout_height="200px"
            android:background="#9b59b6">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="25px"
            android:layout_marginTop="25px"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daftar Menu"
                android:textColor="@color/white"
                android:textSize="50px"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menu apa saja"
                android:textColor="@color/white"
                android:textSize="50px"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="90px"
        android:paddingLeft="90px"
        android:layout_marginTop="25px"
        >
        <LinearLayout
            android:layout_width="200px"
            android:layout_height="200px"
            android:background="#2ecc71">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="25px"
            android:layout_marginTop="25px"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Input Novel"
                android:textColor="@color/white"
                android:textSize="50px"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add New Novel List"
                android:textColor="@color/white"
                android:textSize="50px"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/infomasi_pengguna"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="90px"
        android:paddingLeft="90px"
        android:layout_marginTop="25px"
        >
        <LinearLayout
            android:layout_width="200px"
            android:layout_height="200px"
            android:background="#e74c3c">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="25px"
            android:layout_marginTop="25px"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informasi Pengguna"
                android:textColor="@color/white"
                android:textSize="50px"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cage Or Modify Account"
                android:textColor="@color/white"
                android:textSize="50px"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/cardview_dark_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novel Favorite"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="50px"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terbal Menurut Pembaca"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            android:textSize="50px"
            />
    </LinearLayout>

<!--    Horizontal-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25px"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="#c0392b"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/default_border"
            android:padding="2dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/black">
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:text="Menanti Hari Berganti"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/default_border"
            android:padding="2dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/black">
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:text="Menanti Hari Berganti"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="2dp"
            android:background="@drawable/default_border"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/black">

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:text="Menanti Hari Berganti"/>
        </LinearLayout>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>